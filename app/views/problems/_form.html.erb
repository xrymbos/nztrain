<%= form_for(@problem) do |f| %>
  <% if @problem.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@problem.errors.count, "error") %>
        prohibited this problem from being saved:
      </h2>

      <ul>
      <% @problem.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p> This page is kinda ugly need to clean it up a bit. </p>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :input %>
    <%= f.text_field :input %>
  </div>
  <div class="field">
    <%= f.label :output %>
    <%= f.text_field :output %>
  </div>
  <div class="field">
    <%= f.label :time_limit %>
    <%= f.text_field :time_limit %>
  </div>
  <div class="field">
    <%= f.label :memory_limit %>
    <%= f.text_field :memory_limit %>
  </div>
  <div class="field">
    <%= f.label :statement %><br />
    <%= f.text_area :statement %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
